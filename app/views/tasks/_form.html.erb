<div class="row">
  <div>
    
    <%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status, 'ステータス' %>
    <%= f.select(:status, [['完了','完了'],['未完了','未完了']], class: 'form-control') %>   
  </div>  

  <%= f.submit '登録', class: 'btn btn-primary' %>
<% end %>

  </div>
  
</div>
